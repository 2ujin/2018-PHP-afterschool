<?php
echo "<h4>점수에 따른 학점 판별</h4><hr>";
$score = 55;

echo "입력된 점수 : $score <br>";

switch ($score){
    case $score>=90:
        echo "- 학점 : A";
        
    case $score>=80:
        echo "- 학점 : B";
        
    case $score>=70:
        echo "- 학점 : C";
        
    case $score>=60:
        echo "- 학점 : D";
        
    case $score < 60:
        echo "- 학점 : F";
}
