<?php
echo "<table border = 1 width=300>";
echo "<tr><td>";
echo "<h4>삼각형  * 출력 1</h4><hr>";

for ($i=1; $i<=10; $i++){
    for($j=9; $j>=$i; $j--){//공백찍기
        echo "&nbsp;&nbsp;";
    }
    for($k=1; $k<=$i; $k++){//별찍기
       echo"*";
    }
    echo"<br>";
}
echo "</td>";

echo "<td>";
echo "<h4>삼각형  * 출력 2</h4><hr>";
// echo "</td></tr>";
for ($i=1; $i<=10; $i++){
    for($k=1; $k<=$i; $k++){//별찍기
        echo"*";
    }
    for($j=9; $j>=$i; $j--){//공백찍기
        echo "&nbsp;&nbsp;";
    }
    echo"<br>";
}
echo "</td>";
echo "</tr>";

echo "<table border = 1 width=300>";
echo "<tr><td>";
echo "<h4>삼각형  * 출력 4</h4><hr>";
for ($i = 9; $i>=0; $i--){
    for($j=0;$j<9-$i; $j++)
        echo "  ";
    for($j=0; $j<=$i; $j++)
        echo "*";
        echo "<br>";
    
}
echo"<br>";
echo "</td>";
?>