$pass = $_POST['pass']; 
$name =  $_POST['name'];
$nick = $_POST['nick'];

$hp =   $_POST['hp1']."-".$_POST['hp2']."-".$_POST['hp3'];
$email = $_POST['email1']."@".$_POST['email2'];
$regist_day = date("Y-m-d (H:i)");


include "../lib/dbconn.php";

$sql = "update member 
set 'pass' = '$pass','name' = '$name', 'nick' = '$nick', hp = '$hp', email = '$email', regist_dat = '$regist_day', 
