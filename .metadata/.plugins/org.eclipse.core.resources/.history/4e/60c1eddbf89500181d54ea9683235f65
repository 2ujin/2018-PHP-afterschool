$result = mysql_query($sql, $conn);

$username = $name;
$usernick = $nick;

$_SESSION[username] = $username;
$_SESSION[usernick] = $usernick;

if($result){
    echo "<script>
                window.alert('정보수정에 성공했습니다.');
                history.go(-1)
            </script>";
