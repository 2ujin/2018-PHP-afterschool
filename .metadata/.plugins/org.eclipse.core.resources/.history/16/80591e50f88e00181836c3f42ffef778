<?php
echo "<h4>점수에 따른 학점 판별</h4><hr>";
$score = 81;

echo "입력된 점수 : $score <br>";

if($score>=90){
   echo "A";
}
else if ($score>=80){
    echo "B";
}
else if ($score>=70){
    echo "C";
}
else if ($score>=60){
    echo "D";
}
else{
    "F";
}

if($score%10 > 5){
    echo "+";
}

?>